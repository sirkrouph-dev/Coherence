# MANIFEST.in - Specifies additional files to include in package distribution

# Include documentation files
include README.md
include LICENSE
include ARCHITECTURE.md
include JETSON_DEPLOYMENT.md
include CHANGELOG.md
include CONTRIBUTING.md

# Include configuration files
include pyproject.toml
include setup.cfg
include .flake8
include .gitignore
include .editorconfig
include .pylintrc

# Include requirements files
include requirements*.txt

# Include all package data files
recursive-include core *.json *.yaml *.yml *.txt *.cfg *.ini
recursive-include api *.json *.yaml *.yml *.txt *.cfg *.ini
recursive-include demo *.json *.yaml *.yml *.txt *.cfg *.ini
recursive-include tests *.json *.yaml *.yml *.txt *.cfg *.ini *.py
recursive-include scripts *.sh *.bat *.ps1
recursive-include tools *.py *.sh *.bat
recursive-include benchmarks *.py *.json *.yaml

# Include documentation
recursive-include docs *.rst *.md *.txt *.png *.jpg *.gif *.svg
recursive-include docs/source *
recursive-include docs/_static *
recursive-include docs/_templates *

# Include examples
recursive-include examples *.py *.ipynb *.json *.yaml *.md

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
global-exclude .git*
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~
recursive-exclude venv *
recursive-exclude venv_neuron *
recursive-exclude archive *
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *
recursive-exclude .pytest_cache *
recursive-exclude .mypy_cache *
recursive-exclude htmlcov *
recursive-exclude .coverage *
recursive-exclude .tox *
